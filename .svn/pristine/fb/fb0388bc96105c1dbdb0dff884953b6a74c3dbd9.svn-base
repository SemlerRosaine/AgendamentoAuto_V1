    class Relogio extends Thread {

        @Override
        public void run() {
            lblRelogio.setText(new SimpleDateFormat("HH:mm:ss").format(new Date()));
            try {
                sleep(1000);
                run();
            } catch (InterruptedException ex) {
                Logger.getLogger(TelaPrincipal.class.getName()).log(Level.SEVERE, null, ex);
            }
        }
    }
